.file_name{
	  width: 245px;
	  height: 30px;
	  padding-left: 8px;
	}
a.input {
	  width:100px;
	  height:30px;
	  line-height:30px;
	  background:#f90;
	  text-align:center;
	  display:inline-block;/*具有行内元素的视觉，块级元素的属性 宽高*/
	  overflow:hidden;/*去掉的话，输入框也可以点击*/
	  position:relative;/*相对定位，为 #file 的绝对定位准备*/
	  top:9px;
	  border-radius: 5px;
	  font-size:14px;
	  margin-left:60px;
	  color:#fff;
	}
a.input:hover {
	  background:#f96;
	  color: #ffffff;
	}
	a{
	  text-decoration:none;
	  color:#FFF;
	}
	.file {
	  opacity:0;/*设置此控件透明度为零，即完全透明*/
	  filter:alpha(opacity=0);/*设置此控件透明度为零，即完全透明针对IE*/
	  font-size:100px;
	  position:absolute;/*绝对定位，相对于 .input */
	  top:0;
	  right:0;
	  height: 30px;
	  width: 275px;
	}

