@CHARSET "UTF-8";

#top{ width:100%; height:70px;}
.p1{ font-weight:bold; text-align:center; color:rgba(21,21,21,1); font-size:36px;}
em{font-weight:bold; text-align:center; font-size:36px; color:rgba(255,128,0,1)}
#slider{ margin:0 auto;
         position: relative; 
		 width:1600px;
		 height:630px;}
.box{
	background:#ffcc99;
	z-index: 2;
    position: absolute;
    top: 250px;
    box-sizing: border-box;
    margin: -170px 0 0 260px;
    border-radius: 4px;
    padding: 3px 25px;
    width: 380px;
    font-size: 20px;
    color:#fff;
}
.box p{
	width:260px;
	height:50px;
	margin-bottom:10px;
	font-weight:500;
	text-align:center;
	font-size:30px;
	color:#000;
	font-family:'微软雅黑';
	line-height:30px;
	margin-left: 40px;
}
.box1{
	width:325px;
	height:45px;
}
.box1 span{
	width:80px;
	height:35px;
	text-align:right;
	line-height:40px;
	float:left;
	font-size:15px;
	color:#000;
}
.inputbox{
	width:220px;
	height:35px;
	border:1px solid #ddd;
	float:right;
	border-radius:4px;
	padding-left:15px;
	font-size:14px;
	letter-spacing: 3px;
}
.wrong{
	width:225px;
	height:30px;
	color:red;
	margin-left:110px;
	font-size:12px;
}
.wrong2{
	width:170px;
	height:30px;
	color:red;
	margin-left:110px;
	font-size:12px;
	opacity:0;
}
.inputbox1{
	width:120px;
	height:35px;
	border:1px solid #ddd;
	float:left;
	margin-left:8px;
	border-radius:4px;
	padding-left:15px;
	font-size:14px;
	letter-spacing: 3px;
}
.btn1{
	float:right;
	width:90px;
	height:38px;
	text-align:center;
	line-height:30px;
	background:#f90;
	color:#fff;
	font-size:14px;
	border:0;
	border-radius:4px;
	cursor:pointer;
}
.btn2{
	display:none;
	width:90px;
	height:38px;
	text-align:center;
	line-height:40px;
	background:#f90;
	color:#fff;
	font-size:14px;
	border-radius:4px;
	float:right;
	letter-spacing: 3px;
}
.btn4{
    width: 255px;
    height: 45px;
    font-size: 18px;
    padding: 3px 0;
    border: 0;
    border-radius: 4px;
    background: #f90;
    color: #fff;
    line-height: 1.7;
    text-align: center;
    cursor: pointer;
    margin-left:40px;
    letter-spacing: 3px;
}
.control{
    width: 255px;
    height: 45px;
    border-radius: 4px;
    background: white;
    opacity: 0.2;
    margin-top: -45px;
    margin-left: 40px;
}
.getCodeNull{
	position:absolute;
	width:92px;
	height:38px;
	background:#fff;
	opacity: 0.3;
	left:259px;
	display: none;
}
